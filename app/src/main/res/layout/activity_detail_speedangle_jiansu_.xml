<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/content_background"
    tools:context=".DetailActivity.Detail_Speed_Yunsu_Activity">

    <LinearLayout
        android:id="@+id/linear_jieTu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/content_background"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/fl_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_shape_chart">

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="fill_parent"
                android:layout_height="350dip"
                android:background="#ffffff">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="fill_parent"
                android:layout_height="350dip"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="310dp"
                android:background="@color/red"
                android:visibility="gone" />

            <View
                android:id="@+id/view2"
                android:layout_width="1dp"
                android:layout_height="310dp"
                android:background="@color/red"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView_laber_inf"
                    android:layout_marginLeft="5dp"
                    android:text="平均减速度：" />

                <TextView
                    android:id="@+id/tv_average_jian_speed"
                    style="@style/TextView_show_inf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="m/s²" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView_laber_inf"
                    android:layout_marginLeft="5dp"
                    android:text="减速时间：" />

                <TextView
                    android:id="@+id/tv_jiansu_time"
                    style="@style/TextView_show_inf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="s" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView_laber_inf"
                    android:layout_marginLeft="5dp"
                    android:text="初速度：" />

                <TextView
                    android:id="@+id/tv_chu_speed"
                    style="@style/TextView_show_inf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="m/s" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView_laber_inf"
                    android:layout_marginLeft="5dp"
                    android:text="末速度：" />

                <TextView
                    android:id="@+id/tv_mo_sudu"
                    style="@style/TextView_show_inf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="m/s" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView_laber_inf"
                    android:layout_marginLeft="5dp"
                    android:text="最大速度：" />

                <TextView
                    android:id="@+id/tv_max_speed"
                    style="@style/TextView_show_inf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="m/s" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView_laber_inf"
                    android:layout_marginLeft="5dp"
                    android:text="最小速度：" />

                <TextView
                    android:id="@+id/tv_min_sudu"
                    style="@style/TextView_show_inf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="m/s" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cxFenXi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_offset_5dp"
        android:background="@color/orange"
        android:padding="@dimen/item_offset_5dp"
        android:text="重新分析"
        android:textColor="#031a03"
        android:textSize="@dimen/item_offset_20sp" />

</LinearLayout>