<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fl_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_shape_chart">

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="fill_parent"
            android:layout_height="350dip"
            android:background="#ffffff">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="fill_parent"
            android:layout_height="350dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="310dp"
            android:background="@color/red"
            android:visibility="gone" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="310dp"
            android:background="@color/red"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_laber_inf"
                android:layout_marginLeft="5dp"
                android:text="制动距离：" />

            <TextView
                android:id="@+id/tv_zhidongjuli"
                style="@style/TextView_show_inf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="m" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_laber_inf"
                android:layout_marginLeft="5dp"
                android:text="制动初速度：" />

            <TextView
                android:id="@+id/tv_zhidongchusudu"
                style="@style/TextView_show_inf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="m/s" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_laber_inf"
                android:layout_marginLeft="5dp"
                android:text="6s运行距离：" />

            <TextView
                android:id="@+id/tv_liumiaojuli"
                style="@style/TextView_show_inf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="m" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_laber_inf"
                android:layout_marginLeft="5dp"
                android:text="制动时间：" />

            <TextView
                android:id="@+id/tv_zhidongtime"
                style="@style/TextView_show_inf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="s" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>