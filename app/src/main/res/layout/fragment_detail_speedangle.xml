<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_yunsu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="匀速分析" />

        <Button
            android:id="@+id/btn_jiansu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="减速分析" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/fl_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_shape_chart">

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="fill_parent"
            android:layout_height="350dip"
            android:background="#ffffff">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="fill_parent"
            android:layout_height="350dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="310dp"
            android:background="@color/red"
            android:visibility="gone" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="310dp"
            android:background="@color/red"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_laber_inf"
                android:layout_marginLeft="5dp"
                android:text="运行速度：" />

            <TextView
                android:id="@+id/tv_run_speed"
                style="@style/TextView_show_inf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="m/s" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_laber_inf"
                android:layout_marginLeft="5dp"
                android:text="最大速度：" />

            <TextView
                android:id="@+id/tv_max_speed"
                style="@style/TextView_show_inf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="m/s" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_laber_inf"
                android:layout_marginLeft="5dp"
                android:text="运行角度：" />

            <TextView
                android:id="@+id/tv_run_angle"
                style="@style/TextView_show_inf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="°" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_laber_inf"
                android:layout_marginLeft="5dp"
                android:text="最大角度：" />

            <TextView
                android:id="@+id/tv_max_angle"
                style="@style/TextView_show_inf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="°" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>