<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_offset_60dp"
        android:text="任务信息"
        android:textColor="@color/black"
        android:textSize="@dimen/item_offset_18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_offset_20dp"
        android:layout_marginRight="@dimen/item_offset_20dp"
        android:layout_marginTop="@dimen/item_offset_10dp"
        android:background="@drawable/shape_test_param"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_content1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/item_offset_8dp"
            android:layout_marginBottom="@dimen/item_offset_8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="受检单位："
                android:textColor="@color/black_normal"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_checked_param"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="kid" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lib_black_split_line" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="单轨吊编号:"
                android:textColor="@color/black_normal"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="jjs" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lib_black_split_line"
            />
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/item_offset_8dp"
            android:layout_marginBottom="@dimen/item_offset_8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="测试人员："
                android:textColor="@color/black_normal"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_test_person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="dsfgdgd" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lib_black_split_line" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="创建日期:"
                android:textColor="@color/black_normal"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_item_result1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="fsfs35w41" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>